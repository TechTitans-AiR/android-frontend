<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hr.foi.techtitans.ttpay.products.activity_products.DetailsServiceActivity">

    <LinearLayout
        android:id="@+id/linearLayoutButtonTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/back_ac"
            android:layout_width="40dp"
            android:layout_height="28dp"
            android:clickable="true"
            android:contentDescription="Back Button"
            android:src="@drawable/baseline_arrow_back" />

        <!-- Title -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:text="Details about service"
            android:textColor="@color/red"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleTextView"
        android:layout_marginTop="16dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/linearLayoutButtonTitle"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp">

    <!-- Service Name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/back_ac"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/serviceNameLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Service Name: "
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/serviceNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Description -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/serviceNameTextView"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/descriptionLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description: "
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Service Provider -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/descriptionTextView"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/serviceProviderLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Service Provider: "
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/serviceProviderTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Price -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/serviceProviderTextView"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/priceLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: "
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/priceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Duration -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/priceTextView"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/durationLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration: "
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/durationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Availability -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/durationTextView"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/availabilityLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Availability: "
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/availabilityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Service Location -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/availabilityTextView"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/locationLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Service location: "
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/locationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp" />
    </LinearLayout>
    </LinearLayout>

    <include
        layout="@layout/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
