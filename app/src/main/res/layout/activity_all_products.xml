<!-- activity_all_products.xml -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".navigationBar.activities.AllProductsActivity">

    <!-- back -->
    <ImageView
        android:id="@+id/imgView_back"
        android:layout_width="40dp"
        android:layout_height="28dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:contentDescription="Back Button"
        android:src="@drawable/baseline_arrow_back" />

    <!-- title "All Products" -->
    <TextView
        android:id="@+id/tv_all_products_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-light"
        android:text="All Products"
        android:textColor="@color/red"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Plus icon with red circle -->
    <RelativeLayout
        android:id="@+id/rl_plus_icon_products"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_all_products_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/img_plus_icon_products"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:onClick="onPlusIconProductsClick"
            android:src="@drawable/add_circle" />

    </RelativeLayout>

    <!-- ProgressBar for loading -->
    <ProgressBar
        android:id="@+id/loadingProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:visibility="gone" />

    <!-- Title for Articles -->
    <TextView
        android:id="@+id/tv_articles_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Articles"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@id/rl_plus_icon_products"
        android:layout_marginTop="5dp"
        android:layout_marginStart="16dp"/>

    <!-- RecyclerView for articles -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_all_articles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_articles_title"
        android:layout_marginTop="5dp"
        android:padding="16dp"/>

    <!-- Title for Services -->
    <TextView
        android:id="@+id/tv_services_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Services"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@id/recyclerView_all_articles"
        android:layout_marginTop="5dp"
        android:layout_marginStart="16dp"/>

    <!-- RecyclerView for services -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_all_services"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_services_title"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:padding="16dp"/>

    <!-- BottomNavigationView -->
    <include
        layout="@layout/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
