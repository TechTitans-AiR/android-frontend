<!-- activity_all_products.xml -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".products.activity_products.AllProductsActivity">

    <!-- TextView for the title -->
    <TextView
        android:id="@+id/textView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/catalog_item_title"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/red"
        android:textSize="34sp"
        android:textStyle="bold" />

    <!-- CardView for All Articles -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_all_articles"
        android:layout_width="378dp"
        android:layout_height="112dp"
        android:layout_below="@+id/textView_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="onAllArticlesClick">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imageView_list_articles"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:src="@drawable/articleslist" />

            <TextView
                android:id="@+id/textView_group5"
                android:layout_width="199dp"
                android:layout_height="77dp"
                android:gravity="center"
                android:text="All Articles"
                android:textSize="18sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- CardView for All Services -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_all_services"
        android:layout_width="378dp"
        android:layout_height="112dp"
        android:layout_below="@+id/cardView_all_articles"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="onAllServicesClick">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imageView_list_services"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:src="@drawable/serviceslist" />

            <TextView
                android:id="@+id/textView_group6"
                android:layout_width="199dp"
                android:layout_height="77dp"
                android:gravity="center"
                android:text="All Services"
                android:textSize="18sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Bottom Navigation -->
    <include
        android:id="@+id/bottom_navigation"
        layout="@layout/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
