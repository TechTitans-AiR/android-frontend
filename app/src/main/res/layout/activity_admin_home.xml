<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".navigationBar.activities.AdminHomeActivity">

    <!-- RecyclerView for the list of merchants -->

    <!-- CardView for the first group -->

    <TextView
        android:id="@+id/textView_title"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/admin_home_title"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/red"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- CardView for the second group -->

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_all_transactions"
        android:layout_width="378dp"
        android:layout_height="112dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="onAllTransactionsClick"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/textView_group1"
                android:layout_width="199dp"
                android:layout_height="77dp"
                android:gravity="center"
                android:text="The Transactions"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageView_list_user"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:src="@drawable/userlist" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- CardView for the third group -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_all_merchants"
        android:layout_width="378dp"
        android:layout_height="112dp"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="onAllMerchantsClick"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView_all_transactions">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imageView_add_user"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:src="@drawable/adduser" />

            <TextView
                android:id="@+id/textView_group2"
                android:layout_width="199dp"
                android:layout_height="77dp"
                android:gravity="center"
                android:text="The Merchants"
                android:textSize="18sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- CardView for the fourth group -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_all_products"
        android:layout_width="378dp"
        android:layout_height="112dp"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="onAllProductsClick"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView_all_merchants">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/textView_group3"
                android:layout_width="199dp"
                android:layout_height="77dp"
                android:gravity="center"
                android:text="The products"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageView_list_product"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:src="@drawable/productlist" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <include layout="@layout/bottom_navigation" />

</androidx.constraintlayout.widget.ConstraintLayout>
