<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminHomeActivity">

    <!-- RecyclerView for the list of merchants -->

    <!-- CardView for the first group -->

    <TextView
        android:id="@+id/textView_title"
        android:layout_width="81dp"
        android:layout_height="37dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28dp"
        android:text="@string/admin_home_title"
        android:textAlignment="center"
        android:textColor="@color/red"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- CardView for the second group -->

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_group1"
        android:layout_width="378dp"
        android:layout_height="112dp"
        android:layout_marginTop="50dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="onGroup1Click"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/textView_group1"
                android:layout_width="199dp"
                android:layout_height="77dp"
                android:gravity="center"
                android:text="All merchants"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageView_list_user"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:src="@drawable/userlist" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- CardView for the third group -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_group2"
        android:layout_width="378dp"
        android:layout_height="112dp"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="onGroup2Click"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView_group1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imageView_add_user"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:src="@drawable/adduser" />

            <TextView
                android:id="@+id/textView_group2"
                android:layout_width="199dp"
                android:layout_height="77dp"
                android:gravity="center"
                android:text="Create new merchant"
                android:textSize="18sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- CardView for the fourth group -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_group3"
        android:layout_width="378dp"
        android:layout_height="112dp"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="onGroup3Click"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView_group2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/textView_group3"
                android:layout_width="199dp"
                android:layout_height="77dp"
                android:gravity="center"
                android:text="All products"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageView_list_product"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:src="@drawable/productlist" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_group4"
        android:layout_width="378dp"
        android:layout_height="112dp"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="onGroup4Click"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView_group3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imageView_add_product"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:src="@drawable/addproduct" />

            <TextView
                android:id="@+id/textView_group4"
                android:layout_width="199dp"
                android:layout_height="77dp"
                android:gravity="center"
                android:text="Create new product"
                android:textSize="18sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@color/red"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_navigation_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>
