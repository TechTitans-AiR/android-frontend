<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".catalogItemManagement.activity_catalogItemManagement.activity_createCatalogItem.SelectArticlesActivity">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/back_back"
        android:layout_width="40dp"
        android:layout_height="28dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:contentDescription="Back Button"
        android:src="@drawable/baseline_arrow_back" />

    <!-- ProgressBar for loading -->
    <ProgressBar
        android:id="@+id/loadingProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView_title_select_articles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@id/imgView_back"
        android:fontFamily="sans-serif-light"
        android:text="Select the articles"
        android:textColor="@color/red"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- RecyclerView for selecting articles -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_select_articles"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/textView_title_select_articles"
        android:layout_marginTop="40dp"/>

    <!-- Added articles container -->
    <TextView
        android:id="@+id/textView_added_articles_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recyclerView_select_articles"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-light"
        android:layout_marginTop="40dp"
        android:text="Added articles"
        android:textColor="@color/red"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- RecyclerView for added articles -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_added_articles"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/textView_added_articles_title"
        android:layout_marginTop="5dp"/>

    <!-- Continue button -->
    <Button
        android:id="@+id/btn_continue_select_services"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recyclerView_added_articles"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:text="Continue with selecting services"
        android:textSize="16sp" />

    <!-- BottomNavigationView -->
    <include
        layout="@layout/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
