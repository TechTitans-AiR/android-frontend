<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:baselineAligned="false">

    <!-- Merchant frame -->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_weight="1"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/textView_firstName_lastName"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@drawable/red_border_item"
            android:gravity="center"
            android:text="@string/firstname_lastname"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imgView_eye"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginEnd="80dp"
            android:src="@drawable/ic_eye"
            android:importantForAccessibility="no" />

        <ImageView
            android:id="@+id/imgView_pencil"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginEnd="40dp"
            android:src="@drawable/ic_pencil"
            android:importantForAccessibility="no" />

        <ImageView
            android:id="@+id/imgView_remove"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginEnd="0dp"
            android:src="@drawable/ic_delete"
            android:importantForAccessibility="no" />
    </FrameLayout>

</LinearLayout>