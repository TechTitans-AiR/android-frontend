<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".catalogItemManagement.activity_catalogItemManagement.activity_createCatalogItem.SelectArticlesActivity">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/back_back"
        android:layout_width="40dp"
        android:layout_height="28dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:contentDescription="Back Button"
        android:src="@drawable/baseline_arrow_back" />

    <TextView
        android:id="@+id/textView_title_select_users"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@id/imgView_back"
        android:fontFamily="sans-serif-light"
        android:text="Select the users"
        android:textColor="@color/red"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- RecyclerView for selecting articles -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_title_select_users"
        android:layout_marginTop="14dp"
        android:text="User for catalog can be selected later in app."
        android:textAlignment="center"/>

    <!-- Added articles container -->

    <!-- RecyclerView for added articles -->

    <!-- Continue button -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_added_users"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_added_users_title"
        android:layout_marginTop="5dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_select_users"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView_title_select_users"
        android:layout_marginTop="66dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/textView_added_users_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recyclerView_select_users"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-light"
        android:text="Added users"
        android:textColor="@color/red"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_continue_see_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recyclerView_added_users"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Continue - see all data"
        android:textSize="16sp" />

    <!-- BottomNavigationView -->
    <include
        layout="@layout/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
